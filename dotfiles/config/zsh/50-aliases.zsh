# Neovim Sanity
alias vim="nvim"
alias vi="nvim"
alias vimdiff="nvim -d"

# Basics
alias l="ls -la"
alias cat="bat"

# Don't wanna catch these knives
alias cp="cp -ip"
alias mv="mv -i"

# Just good UI
alias du="du -h"
alias df="df -h"

# Zsh is weird about this
alias history="fc -l 1"

# Always forget this one
alias copy="xclip -sel c -r"

# Turn off screen
alias blank="xset dpms force off"
